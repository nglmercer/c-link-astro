---
import Layout from '../layouts/Layout.astro'
import { getProfileForSEO, isReservedRoute } from '../lib/profile'

const { username } = Astro.params

// Prevent accessing reserved routes
if (!username || isReservedRoute(username)) {
  return Astro.redirect('/')
}

// Fetch profile data on the server for SEO/social previews
const { profile, seoTitle, seoDescription } = await getProfileForSEO(Astro, username)
---

<Layout 
  title={seoTitle}
  description={seoDescription}
  image="/hero.png"
>
  <div class="profile-page" id="profile-page">
    <div class="profile-container">
      <div class="profile-header">
        <div class="avatar-wrapper">
          <div class="avatar" id="avatar">
            {username.charAt(0).toUpperCase()}
          </div>
        </div>
        <h1 class="display-name" id="display-name">{username}</h1>
        <p class="username-handle">@{username}</p>
        <p class="bio" id="bio"></p>
      </div>

      <div class="links-container">
        <div id="loading" class="loading">
          <div class="spinner"></div>
          <span>Loading profile...</span>
        </div>
        
        <ul class="links-list" id="links-list">
        </ul>
        
        <div class="not-found" id="not-found">
          <div class="not-found-content">
            <div class="not-found-icon">
              <span class="material-symbols-outlined">link_off</span>
            </div>
            <h2>Page not found</h2>
            <p>This link tree doesn't exist or hasn't been claimed yet.</p>
            <a href="/dashboard" class="cta-button">
              <span class="material-symbols-outlined">add</span>
              Create your own
            </a>
          </div>
        </div>
      </div>

      <footer class="profile-footer">
        <a href="/" class="footer-brand">
          <span class="material-symbols-outlined">link</span>
          <span>C-Link</span>
        </a>
      </footer>
    </div>
  </div>
</Layout>

<script>
  import { 
    DEFAULT_THEME, 
    applyTheme, 
    showNotFoundState, 
    displayProfile 
  } from '../lib/profile'

  // Get username from URL
  function getUsernameFromUrl(): string {
    const pathParts = window.location.pathname.split('/')
    return pathParts[1] || pathParts[0]
  }

  // Load profile from API
  async function loadProfile(): Promise<void> {
    const username = getUsernameFromUrl()
    
    try {
      const response = await fetch(`/api/profile/${username}`)
      
      if (!response.ok) {
        showNotFoundState()
        return
      }
      
      const data = await response.json()
      
      if (!data.profile) {
        showNotFoundState()
        return
      }
      
      displayProfile(data.profile)
      
    } catch (error) {
      console.error('Error loading profile:', error)
      showNotFoundState()
    }
  }

  // Initialize
  loadProfile()
</script>

<style>
  .profile-page {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    padding: 3rem 1rem;
    transition: background 0.5s ease;
  }

  .profile-container {
    width: 100%;
    max-width: 520px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .profile-header {
    text-align: center;
    margin-bottom: 2rem;
    animation: fadeInDown 0.6s ease;
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .avatar-wrapper {
    position: relative;
    margin-bottom: 1rem;
  }

  .avatar {
    width: 96px;
    height: 96px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    font-weight: 700;
    box-shadow: 0 8px 32px rgba(102, 126, 234, 0.4);
    transition: transform 0.3s ease;
  }

  .avatar:hover {
    transform: scale(1.05);
  }

  .display-name {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0 0 0.25rem;
    color: #1f2937;
  }

  .username-handle {
    font-size: 0.95rem;
    color: #6b7280;
    margin: 0 0 0.75rem;
  }

  .bio {
    font-size: 0.95rem;
    color: #6b7280;
    max-width: 320px;
    margin: 0 auto;
    line-height: 1.5;
    display: none;
  }

  .links-container {
    width: 100%;
  }

  .loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 3rem;
    color: #6b7280;
  }

  .spinner {
    width: 40px;
    height: 40px;
    border: 3px solid rgba(255, 255, 255, 0.3);
    border-top-color: white;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .not-found {
    display: none;
    width: 100%;
  }

  .not-found-content {
    text-align: center;
    padding: 3rem 2rem;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 20px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1);
  }

  .not-found-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 1.5rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .not-found-icon .material-symbols-outlined {
    font-size: 2.5rem;
    color: white;
  }

  .not-found h2 {
    margin: 0 0 0.5rem;
    font-size: 1.5rem;
    color: #1f2937;
  }

  .not-found p {
    color: #6b7280;
    margin: 0 0 1.5rem;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 0.875rem 1.75rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.5);
  }

  .links-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
  }

  .link-item {
    animation: slideIn 0.5s ease forwards;
    opacity: 0;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .link-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    width: 100%;
    padding: 1rem 1.25rem;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 16px;
    text-decoration: none;
    color: #1f2937;
    font-weight: 500;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  }

  .link-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
  }

  .link-card:active {
    transform: translateY(-1px);
  }

  .link-icon {
    width: 44px;
    height: 44px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: transform 0.2s ease;
  }

  .link-card:hover .link-icon {
    transform: scale(1.1);
  }

  .link-icon .material-symbols-outlined {
    font-size: 22px;
  }

  .link-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
    min-width: 0;
  }

  .link-title {
    font-size: 1rem;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .link-url {
    font-size: 0.8rem;
    color: #9ca3af;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .link-arrow {
    color: #d1d5db;
    font-size: 20px;
    transition: all 0.2s ease;
  }

  .link-card:hover .link-arrow {
    color: #9ca3af;
    transform: translate(2px, -2px);
  }

  .empty-link {
    text-align: center;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 16px;
    color: #9ca3af;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .empty-link .material-symbols-outlined {
    font-size: 2rem;
    opacity: 0.5;
  }

  .profile-footer {
    margin-top: auto;
    padding-top: 2rem;
  }

  .footer-brand {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .footer-brand:hover {
    color: white;
  }

  .footer-brand .material-symbols-outlined {
    font-size: 1rem;
  }

  @media (max-width: 600px) {
    .profile-page {
      padding: 2rem 0.75rem;
    }

    .display-name {
      font-size: 1.5rem;
    }

    .avatar {
      width: 80px;
      height: 80px;
      font-size: 2rem;
    }

    .link-card {
      padding: 0.875rem 1rem;
    }

    .link-icon {
      width: 40px;
      height: 40px;
    }

    .link-icon .material-symbols-outlined {
      font-size: 20px;
    }
  }
</style>
