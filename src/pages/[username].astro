---
import Layout from '../layouts/Layout.astro'
import { 
  isReservedRoute,
  getPlatformIcon,
  getDomain,
  themes,
  DEFAULT_THEME,
  getFaviconUrl,
  getInitials
} from '../lib/profile'
import { getProfileForSEO } from '../lib/profile.server'

const { username } = Astro.params

// Prevent accessing reserved routes
if (!username || isReservedRoute(username)) {
  return Astro.redirect('/')
}

// Fetch profile data on the server for SEO/social previews
const { profile, seoTitle, seoDescription } = await getProfileForSEO(Astro, username)

const initialTheme = profile?.theme || DEFAULT_THEME
const themeConfig = themes[initialTheme] || themes[DEFAULT_THEME]
---

<Layout 
  title={seoTitle}
  description={seoDescription}
  image="/hero.png"
  showHeader={false}
>
  <div 
    class="profile-page" 
    id="profile-page" 
    data-theme-preset={initialTheme}
    style={`
      --theme-bg: ${themeConfig.background}; 
      --theme-card-bg: ${themeConfig.cardBg}; 
      --theme-card-border: ${themeConfig.cardBorder}; 
      --theme-text: ${themeConfig.text}; 
      --theme-subtext: ${themeConfig.subtext}; 
      --theme-accent: ${themeConfig.accent}; 
      --theme-glass: ${themeConfig.glass ? 'blur(16px)' : 'none'};
    `}
  >
    <div class="profile-container">
      <div class="profile-header">
        <div class="avatar-wrapper">
          <div class="avatar" id="avatar">
            {profile?.avatarUrl ? (
              <img 
                class="avatar-image" 
                src={profile.avatarUrl} 
                alt={profile?.displayName || username} 
                onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
              />
              <span class="initial" style="display: none;">{getInitials(profile?.displayName || username)}</span>
            ) : (
              <span class="initial">{getInitials(profile?.displayName || username)}</span>
            )}
          </div>
          <div class="avatar-glow"></div>
        </div>
        
        <h1 class="display-name" id="display-name">
          {profile?.displayName || `@${username}`}
        </h1>
        <p class="username-handle">@{username}</p>
        
        {profile?.bio && (
          <p class="bio" id="bio" style="display: block;">
            {profile.bio}
          </p>
        )}
        {!profile?.bio && <p class="bio" id="bio" style="display: none;"></p>}
      </div>

      <div class="links-container">
        {!profile && (
          <div id="loading" class="loading">
            <div class="spinner"></div>
            <span>Loading profile...</span>
          </div>
        )}
        
        <ul class="links-list" id="links-list" style={!profile ? "display: none;" : "display: flex;"}>
          {profile?.links?.map((link, index) => {
            const platform = getPlatformIcon(link.url)
            const domain = getDomain(link.url)
            const thumbType = link.thumbnailType || 'favicon'
            
            return (
              <li class="link-item" style={`animation-delay: ${index * 0.1}s`}>
                <a 
                  href={link.url} 
                  target="_blank" 
                  rel="noopener noreferrer" 
                  class="link-card"
                >
                  <div class="link-icon" style={`background: ${platform.color}15; color: ${platform.color}`}>
                    {(() => {
                      if (thumbType === 'favicon') {
                        const faviconUrl = getFaviconUrl(link.url);
                        return faviconUrl ? (
                          <>
                            <img 
                              src={faviconUrl} 
                              alt="" 
                              class="link-favicon" 
                              onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"
                            />
                            <span class="material-symbols-outlined" style="display: none;">{platform.icon}</span>
                          </>
                        ) : (
                          <span class="material-symbols-outlined">{platform.icon}</span>
                        );
                      } else if (thumbType === 'preview') {
                        const previewUrl = `https://s1.wp.com/mshots/v1/${encodeURIComponent(link.url)}?w=200`;
                        return (
                          <>
                            <img 
                              src={previewUrl} 
                              alt="" 
                              class="link-favicon" 
                              style="width: 100%; height: 100%; object-fit: cover; border-radius: 12px;"
                              onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"
                            />
                            <span class="material-symbols-outlined" style="display: none;">visibility</span>
                          </>
                        );
                      } else if (thumbType === 'custom' && link.thumbnailUrl) {
                        return (
                          <>
                            <img 
                              src={link.thumbnailUrl} 
                              alt="" 
                              class="link-favicon" 
                              style="width: 100%; height: 100%; object-fit: cover; border-radius: 12px;"
                              onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"
                            />
                            <span class="material-symbols-outlined" style="display: none;">image</span>
                          </>
                        );
                      }
                      return <span class="material-symbols-outlined">{platform.icon}</span>;
                    })()}
                  </div>
                  <div class="link-content">
                    <span class="link-title">{link.title}</span>
                    <span class="link-url">{domain}</span>
                  </div>
                  <span class="material-symbols-outlined link-arrow">open_in_new</span>
                </a>
              </li>
            )
          })}
        </ul>
        
        <div class="not-found" id="not-found" style={!profile ? "display: flex;" : "display: none;"}>
          {!profile && (
            <div class="not-found-content">
              <div class="not-found-icon">
                <span class="material-symbols-outlined">link_off</span>
              </div>
              <h2>Page not found</h2>
              <p>This link tree doesn't exist or hasn't been claimed yet.</p>
              <a href="/dashboard" class="cta-button">
                <span class="material-symbols-outlined">add</span>
                Create your own
              </a>
            </div>
          )}
        </div>
      </div>

      <footer class="profile-footer">
        <a href="/" class="footer-brand">
          <span class="material-symbols-outlined">link</span>
          <span>C-Link</span>
        </a>
      </footer>
    </div>
  </div>

  <template id="link-template">
    <li class="link-item">
      <a target="_blank" rel="noopener noreferrer" class="link-card">
        <div class="link-icon">
          <span class="material-symbols-outlined"></span>
        </div>
        <div class="link-content">
          <span class="link-title"></span>
          <span class="link-url"></span>
        </div>
        <span class="material-symbols-outlined link-arrow">open_in_new</span>
      </a>
    </li>
  </template>

  <template id="empty-links-template">
    <li class="empty-link">
      <span class="material-symbols-outlined">link_off</span>
      <span>No links yet</span>
    </li>
  </template>
</Layout>

<script>
  import { 
    DEFAULT_THEME, 
    applyTheme, 
    showNotFoundState, 
    displayProfile 
  } from '../lib/profile'

  // Get username from URL
  function getUsernameFromUrl(): string {
    const pathParts = window.location.pathname.split('/')
    return pathParts[1] || pathParts[0]
  }

  // Load profile from API (only if needed or for fresh data)
  async function loadProfile(): Promise<void> {
    const username = getUsernameFromUrl()
    
    // If we already have the profile Rendered via SSR, we might still want to fetch 
    // to handle dynamic updates or if we're in a "preview" environment
    try {
      const response = await fetch(`/api/profile/${username}`)
      
      if (!response.ok) {
        if (!document.getElementById('links-list')?.children.length) {
          showNotFoundState()
        }
        return
      }
      
      const data = await response.json()
      
      if (!data.profile) {
        if (!document.getElementById('links-list')?.children.length) {
          showNotFoundState()
        }
        return
      }
      
      displayProfile(data.profile)
      
    } catch (error) {
      console.error('Error loading profile:', error)
      if (!document.getElementById('links-list')?.children.length) {
        showNotFoundState()
      }
    }
  }

  // Initialize
  // loadProfile() // We don't necessarily need to call this if SSR is working, 
  // but keep it if you want fresh client-side state

  // Listen for live updates if in preview mode
  window.addEventListener('message', (event) => {
    if (event.data.type === 'theme-updated') {
      applyTheme(event.data.theme);
    } else if (event.data.type === 'profile-updated') {
      displayProfile(event.data.profile);
    }
  });
</script>

<style>
  .profile-page {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    padding: var(--spacing-12) var(--spacing-4);
    background: var(--theme-bg);
    background-attachment: fixed;
    transition: all 0.7s cubic-bezier(0.4, 0, 0.2, 1);
    width: 100%;
    box-sizing: border-box;
    color: var(--theme-text);
  }

  .profile-container {
    width: 100%;
    max-width: 540px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-12);
  }

  .profile-header {
    text-align: center;
    width: 100%;
    animation: fadeInDown 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes scaleIn {
    from {
      opacity: 0;
      transform: scale(0.8);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .avatar-wrapper {
    position: relative;
    margin-bottom: var(--spacing-8);
    width: fit-content;
    margin-left: auto;
    margin-right: auto;
  }

  .avatar {
    width: 120px;
    height: 120px;
    border-radius: var(--radius-full);
    background: linear-gradient(135deg, var(--theme-accent) 0%, var(--theme-text) 100%);
    color: var(--text-inverse);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-extrabold);
    box-shadow: var(--shadow-2xl);
    border: 4px solid var(--theme-card-border);
    transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    position: relative;
    z-index: 2;
    overflow: hidden;
  }

  .avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .avatar-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 140%;
    height: 140%;
    background: radial-gradient(circle, var(--theme-accent) 0%, transparent 70%);
    z-index: 1;
    pointer-events: none;
    opacity: 0.15;
    animation: pulse 4s infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.1; }
    50% { transform: translate(-50%, -50%) scale(1.1); opacity: 0.2; }
  }

  .avatar:hover {
    transform: scale(1.05) rotate(5deg);
    box-shadow: 0 25px 65px rgba(0, 0, 0, 0.3);
    border-color: var(--theme-accent);
  }

  .display-name {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-extrabold);
    margin: 0 0 var(--spacing-3);
    color: var(--theme-text);
    letter-spacing: -0.05em;
    line-height: 1;
  }

  .username-handle {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-semibold);
    color: var(--theme-subtext);
    margin: 0 0 var(--spacing-7);
    letter-spacing: -0.02em;
  }

  .bio {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-medium);
    color: var(--theme-subtext);
    max-width: 480px;
    margin: 0 auto;
    line-height: 1.6;
    animation: fadeInUp 1s cubic-bezier(0.16, 1, 0.3, 1) backwards;
    animation-delay: 0.2s;
  }

  .links-container {
    width: 100%;
  }

  .loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-4);
    padding: var(--spacing-12);
  }

  .spinner {
    width: 48px;
    height: 48px;
    border: 4px solid var(--theme-card-bg);
    border-top-color: var(--theme-accent);
    border-radius: var(--radius-full);
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .not-found {
    display: none;
    width: 100%;
    justify-content: center;
  }

  .not-found-content {
    text-align: center;
    padding: var(--spacing-16) var(--spacing-8);
    background: var(--theme-card-bg);
    backdrop-filter: var(--theme-glass);
    -webkit-backdrop-filter: var(--theme-glass);
    border: 1px solid var(--theme-card-border);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-xl);
    max-width: 400px;
    animation: scaleIn 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .not-found-icon {
    width: 90px;
    height: 90px;
    margin: 0 auto var(--spacing-8);
    background: var(--theme-accent);
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .not-found-icon .material-symbols-outlined {
    font-size: var(--font-size-4xl);
    color: var(--theme-bg);
  }

  .not-found h2 {
    margin: 0 0 var(--spacing-4);
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-extrabold);
    color: var(--theme-text);
  }

  .not-found p {
    color: var(--theme-subtext);
    margin: 0 0 var(--spacing-8);
    font-size: var(--font-size-lg);
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-3);
    background: var(--theme-text);
    color: var(--theme-bg);
    padding: var(--spacing-4) var(--spacing-9);
    border-radius: var(--radius-full);
    text-decoration: none;
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-lg);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: var(--shadow-lg);
  }

  .cta-button:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
    opacity: 0.9;
  }

  .links-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
    width: 100%;
  }

  .link-item {
    animation: slideIn 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    opacity: 0;
    width: 100%;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(30px) scale(0.98);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .link-card {
    display: flex;
    align-items: center;
    gap: var(--spacing-6);
    width: 100%;
    padding: var(--spacing-5) var(--spacing-7);
    background: var(--theme-card-bg);
    backdrop-filter: var(--theme-glass);
    -webkit-backdrop-filter: var(--theme-glass);
    border: 1px solid var(--theme-card-border);
    border-radius: var(--radius-2xl);
    text-decoration: none;
    color: var(--theme-text);
    font-weight: var(--font-weight-semibold);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: var(--shadow-md);
    box-sizing: border-box;
    position: relative;
    overflow: hidden;
  }

  .link-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: var(--theme-accent);
    opacity: 0;
    transition: opacity 0.3s ease;
    border-radius: var(--radius-full) 0 0 var(--radius-full);
  }

  .link-card:hover {
    transform: translateX(4px);
    background: var(--theme-card-bg);
    border-color: var(--theme-accent);
    box-shadow: var(--shadow-xl);
  }

  .link-card:hover::before {
    opacity: 1;
  }

  .link-card:active {
    transform: scale(0.99);
  }

  .link-icon {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .link-card:hover .link-icon {
    transform: scale(1.1) rotate(-5deg);
  }

  .link-icon .material-symbols-outlined {
    font-size: 24px;
  }

  .link-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 2px;
    min-width: 0;
  }

  .link-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    letter-spacing: -0.02em;
  }

  .link-url {
    font-size: var(--font-size-sm);
    color: var(--theme-subtext);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-weight: var(--font-weight-medium);
    opacity: 0.8;
  }

  .link-arrow {
    color: var(--theme-subtext);
    opacity: 0.5;
    font-size: 20px;
    transition: all 0.3s ease;
  }

  .link-card:hover .link-arrow {
    opacity: 1;
    color: var(--theme-accent);
    transform: translate(3px, -3px);
  }

  .profile-footer {
    margin-top: var(--spacing-8);
    padding-bottom: var(--spacing-12);
  }

  .footer-brand {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    color: var(--theme-subtext);
    text-decoration: none;
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-bold);
    transition: all 0.3s ease;
    padding: var(--spacing-3) var(--spacing-7);
    border-radius: var(--radius-full);
    background: var(--theme-card-bg);
    border: 1px solid var(--theme-card-border);
    backdrop-filter: var(--theme-glass);
  }

  .footer-brand:hover {
    color: var(--theme-text);
    border-color: var(--theme-accent);
    transform: translateY(-2px);
  }

  .footer-brand .material-symbols-outlined {
    font-size: var(--font-size-lg);
  }

  @media (max-width: 640px) {
    .profile-page {
      padding: var(--spacing-12) var(--spacing-4);
    }

    .display-name {
      font-size: var(--font-size-3xl);
    }

    .avatar {
      width: 100px;
      height: 100px;
      font-size: var(--font-size-3xl);
    }

    .link-card {
      padding: var(--spacing-4) var(--spacing-6);
      gap: var(--spacing-5);
    }
  }

  /* Custom Scrollbar */
  ::-webkit-scrollbar {
    width: 6px;
  }
  ::-webkit-scrollbar-track {
    background: transparent;
  }
  ::-webkit-scrollbar-thumb {
    background: var(--theme-card-border);
    border-radius: var(--radius-full);
  }
  ::-webkit-scrollbar-thumb:hover {
    background: var(--theme-accent);
  }

  /* Favicon Styles */
  .link-favicon {
    width: 24px;
    height: 24px;
    border-radius: var(--radius-md);
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  .link-card:hover .link-favicon {
    transform: scale(1.1);
  }
</style>
