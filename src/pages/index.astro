---
import Layout from '../layouts/Layout.astro'
import { SignedIn, SignedOut } from '@clerk/astro/components'
---

<Layout 
  title="C-Link - Your Personal Link Tree"
  description="Create your personal link tree and share all your links in one place. Custom profiles, mobile friendly, and easy to use."
  image="/hero.png"
>
  <div class="hero">
    <div class="hero-content">
      <h1 class="gradient-text">Welcome to C-Link</h1>
      <p class="subtitle">Create your personal link tree and share all your links in one place</p>
      
      <SignedIn>
        <a href="/dashboard" class="cta-button">Go to Dashboard</a>
      </SignedIn>
      
      <SignedOut>
        <p class="cta-text">Sign in to create your own link tree</p>
      </SignedOut>
    </div>
    
    <div class="features">
      <div class="feature-card">
        <div class="feature-icon">üåê</div>
        <h3>Custom Profile</h3>
        <p>Personalize your page with your name, bio, and avatar</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon">üîó</div>
        <h3>Manage Links</h3>
        <p>Add, edit, and organize all your important links</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon">üì±</div>
        <h3>Mobile Friendly</h3>
        <p>Looks great on any device</p>
      </div>
    </div>
  </div>
</Layout>

<style>
  .hero {
    min-height: calc(100vh - 80px);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-12) var(--spacing-4);
    text-align: center;
    background-color: var(--bg-primary);
  }

  .hero-content {
    max-width: 600px;
    margin-bottom: var(--spacing-12);
  }

  h1 {
    font-size: var(--font-size-5xl);
    font-weight: var(--font-weight-extrabold);
    margin: 0 0 var(--spacing-4);
    line-height: 1.1;
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .subtitle {
    font-size: var(--font-size-xl);
    color: var(--text-secondary);
    margin: 0 0 var(--spacing-8);
  }

  .cta-button {
    display: inline-block;
    background: var(--color-primary);
    color: var(--text-inverse);
    padding: var(--spacing-4) var(--spacing-8);
    border-radius: var(--radius-xl);
    text-decoration: none;
    font-weight: var(--font-weight-semibold);
    font-size: var(--font-size-lg);
    transition: all var(--transition-base);
  }

  .cta-button:hover {
    background: var(--color-primary-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .cta-text {
    color: var(--text-secondary);
    font-size: var(--font-size-base);
  }

  .features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: var(--spacing-6);
    max-width: 800px;
    width: 100%;
  }

  .feature-card {
    background: var(--bg-primary);
    border: 1px solid var(--border-primary);
    padding: var(--spacing-6);
    border-radius: var(--radius-2xl);
    text-align: center;
    transition: all var(--transition-base);
  }

  .feature-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-md);
    transform: translateY(-4px);
  }

  .feature-icon {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--spacing-3);
  }

  .feature-card h3 {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    margin: 0 0 var(--spacing-2);
    color: var(--text-primary);
  }

  .feature-card p {
    margin: 0;
    color: var(--text-secondary);
    font-size: var(--font-size-sm);
    line-height: 1.5;
  }

  @media (max-width: 640px) {
    h1 {
      font-size: var(--font-size-4xl);
    }
    
    .subtitle {
      font-size: var(--font-size-base);
    }
    
    .features {
      grid-template-columns: 1fr;
    }
  }
</style>
