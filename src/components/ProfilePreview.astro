---
interface Link {
  id: string;
  title: string;
  url: string;
  order: number;
  isActive: boolean;
}

interface Props {
  username: string;
  displayName?: string;
  bio?: string;
  links?: Link[];
  theme?: string;
}

const { username = '', displayName = '', bio = '', links = [], theme = 'gradient' } = Astro.props;
import { themes } from '../lib/profile'

// Get platform icon name
function getPlatformIconName(url: string): string {
  try {
    const domain = new URL(url).hostname.replace('www.', '').toLowerCase();
    
    if (domain.includes('github')) return 'code';
    if (domain.includes('twitter') || domain.includes('x.com')) return 'tag';
    if (domain.includes('instagram')) return 'photo_camera';
    if (domain.includes('youtube')) return 'play_circle';
    if (domain.includes('linkedin')) return 'work';
    if (domain.includes('tiktok')) return 'music_note';
    if (domain.includes('discord')) return 'chat';
    if (domain.includes('twitch')) return 'sports_esports';
    if (domain.includes('reddit')) return 'forum';
    if (domain.includes('medium')) return 'article';
    return 'link';
  } catch {
    return 'link';
  }
}

function getDomain(url: string): string {
  try {
    return new URL(url).hostname.replace('www.', '');
  } catch {
    return url;
  }
}
---

<div class="profile-preview">
  <div class="preview-header">
    <span class="material-symbols-outlined">visibility</span>
    <h3>Live Preview</h3>
  </div>
  
  <div class="preview-device">
    <div class="preview-screen" id="preview-screen">
      <div class="preview-content" id="preview-content">
        <div class="preview-avatar" id="preview-avatar">
          {displayName ? displayName.charAt(0).toUpperCase() : (username ? username.charAt(0).toUpperCase() : '?')}
        </div>
        <h4 class="preview-name" id="preview-name">
          {displayName || (username ? `@${username}` : 'Your Name')}
        </h4>
        <p class="preview-bio" id="preview-bio">
          {bio || 'Your bio will appear here...'}
        </p>
        
        <div class="preview-links" id="preview-links">
          <!-- Initial server-side rendering or empty state -->
          {links.length === 0 ? (
            <div class="preview-empty">No links added yet</div>
          ) : (
            links.slice(0, 5).map((link) => (
              <div class="preview-link-item">
                <span class="material-symbols-outlined preview-link-icon">
                  {getPlatformIconName(link.url)}
                </span>
                <span class="preview-link-title">{link.title}</span>
                <span class="material-symbols-outlined preview-link-arrow">chevron_right</span>
              </div>
            ))
          )}
        </div>
        
        <div class="preview-footer">
          <span class="material-symbols-outlined">link</span>
          <span>C-Link</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Templates -->
  <template id="preview-link-template">
    <div class="preview-link-item">
      <span class="material-symbols-outlined preview-link-icon"></span>
      <span class="preview-link-title"></span>
      <span class="material-symbols-outlined preview-link-arrow">chevron_right</span>
    </div>
  </template>

  <template id="preview-empty-template">
    <div class="preview-empty">No links added yet</div>
  </template>
</div>

<script>
  // dont apply lang="ts" to this script|| astro default script is ts 
  // Update preview when form values change
  const usernameInput = document.getElementById('username') as HTMLInputElement
  const displayNameInput = document.getElementById('displayName') as HTMLInputElement
  const bioInput = document.getElementById('bio') as HTMLTextAreaElement
  const previewName = document.getElementById('preview-name')
  const previewBio = document.getElementById('preview-bio')
  const previewScreen = document.getElementById('preview-screen')
  const previewAvatar = document.getElementById('preview-avatar')
  const previewLinks = document.getElementById('preview-links')
  
  // Use the themes object from profile.ts
  import type { Link } from '../types/linktree';
  import { themes } from '../lib/profile'

  function updatePreview() {
    const usernameVal = usernameInput?.value?.trim() || ''
    const displayNameVal = displayNameInput?.value?.trim() || ''
    const bioVal = bioInput?.value?.trim() || ''
    
    if (previewName) {
      if (displayNameVal) {
        previewName.textContent = displayNameVal
      } else if (usernameVal) {
        previewName.textContent = '@' + usernameVal
      } else {
        previewName.textContent = 'Your Name'
      }
    }
    
    if (previewBio) {
      previewBio.textContent = bioVal || 'Your bio will appear here...'
    }
  }

  function updateTheme(themeName: string) {
    const theme = themes[themeName] || themes['gradient']
    
    if (previewScreen) {
      previewScreen.style.background = theme.background
    }
    
    if (previewName) {
      previewName.style.color = theme.text
    }
    
    if (previewBio) {
      previewBio.style.color = theme.subtext
    }

    // Apply to existing links in preview
    const linkCards = previewLinks?.querySelectorAll('.preview-link-item')
    linkCards?.forEach(card => {
      (card as HTMLElement).style.background = theme.cardBg
      const title = card.querySelector('.preview-link-title') as HTMLElement
      if (title) title.style.color = theme.text
    })
  }

  function getDomain(url: string): string {
    try {
      const urlObj = new URL(url);
      return urlObj.hostname.replace('www.', '');
    } catch {
      return url;
    }
  }

  function getPlatformIconName(url: string): string {
    const domain = getDomain(url).toLowerCase();
    
    if (domain.includes('github')) return 'code';
    if (domain.includes('twitter') || domain.includes('x.com')) return 'tag';
    if (domain.includes('instagram')) return 'photo_camera';
    if (domain.includes('youtube')) return 'play_circle';
    if (domain.includes('linkedin')) return 'work';
    if (domain.includes('tiktok')) return 'music_note';
    if (domain.includes('discord')) return 'chat';
    if (domain.includes('twitch')) return 'sports_esports';
    if (domain.includes('reddit')) return 'forum';
    if (domain.includes('medium')) return 'article';
    return 'link';
  }

  function updateLinks(links: Link[]) {
    const container = document.getElementById('preview-links');
    const template = document.getElementById('preview-link-template') as HTMLTemplateElement;
    const emptyTemplate = document.getElementById('preview-empty-template') as HTMLTemplateElement;
    
    if (!container || !template || !emptyTemplate) return;
    
    container.innerHTML = '';

    const activeLinks = links.filter(l => l.isActive);
    
    if (activeLinks.length === 0) {
      container.appendChild(emptyTemplate.content.cloneNode(true));
      return;
    }

    const currentThemeName = document.querySelector('.theme-option.active')?.getAttribute('data-theme') || 'gradient';
    const theme = themes[currentThemeName as any] || themes['gradient'];

    activeLinks.slice(0, 6).forEach(link => {
      const clone = template.content.cloneNode(true) as DocumentFragment;
      const item = clone.querySelector('.preview-link-item') as HTMLElement;
      const icon = clone.querySelector('.preview-link-icon') as HTMLElement;
      const title = clone.querySelector('.preview-link-title') as HTMLElement;
      
      item.style.background = theme.cardBg;
      icon.textContent = getPlatformIconName(link.url);
      title.textContent = link.title;
      title.style.color = theme.text;
      
      container.appendChild(clone);
    });

    if (activeLinks.length > 6) {
      const more = document.createElement('p');
      more.className = 'preview-more';
      more.textContent = `+${activeLinks.length - 6} more links`;
      container.appendChild(more);
    }
  }
  
  usernameInput?.addEventListener('input', updatePreview)
  displayNameInput?.addEventListener('input', updatePreview)
  bioInput?.addEventListener('input', updatePreview)

  // Listen for theme updates
  document.addEventListener('theme-updated', (e: Event) => {
    const customEvent = e as CustomEvent<string>;
    updateTheme(customEvent.detail)
  });

  // Listen for links updates
  document.addEventListener('links-updated', (e: Event) => {
    const customEvent = e as CustomEvent<Link[]>;
    updateLinks(customEvent.detail);
  });

  // Initial theme application
  const initialTheme = document.querySelector('.theme-option.active')?.getAttribute('data-theme') || 'gradient';
  updateTheme(initialTheme);
</script>

