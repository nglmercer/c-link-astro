---
interface Link {
  id: string;
  title: string;
  url: string;
  order: number;
  isActive: boolean;
}

interface Props {
  username: string;
}

const { username = '' } = Astro.props;
---

<div class="profile-preview">
  <div class="preview-header">
    <span class="material-symbols-outlined">visibility</span>
    <h3>Live Preview</h3>
    <button id="refresh-preview" class="refresh-btn" title="Refresh Preview">
      <span class="material-symbols-outlined">refresh</span>
    </button>
  </div>
  
  <div class="preview-device">
    <div class="preview-screen">
      <iframe 
        id="preview-iframe" 
        src={`/${username}?preview=true`} 
        title="Profile Preview"
        class="preview-iframe"
      ></iframe>
      <div class="preview-loading">
        <div class="spinner"></div>
      </div>
    </div>
  </div>
</div>

<script>
  // script in astro is ts by default
  const iframe = document.getElementById('preview-iframe') as HTMLIFrameElement;
  const refreshBtn = document.getElementById('refresh-preview');
  const loader = document.querySelector('.preview-loading');

  function updateIframe() {
    if (!iframe || !iframe.contentWindow) return;

    const username = (document.getElementById('username') as HTMLInputElement)?.value || '';
    const displayName = (document.getElementById('displayName') as HTMLInputElement)?.value || '';
    const bio = (document.getElementById('bio') as HTMLTextAreaElement)?.value || '';
    const currentTheme = (document.querySelector('.theme-option.active') as HTMLElement)?.dataset.theme || 'gradient';
    
    // We need current links. They are stored in dashboard script state, but we can get them from events
    // or just trigger profile-updated with the latest data we have.
    
    const profile = {
      username,
      displayName,
      bio,
      avatarUrl: (window as any).currentAvatar || '',
      theme: currentTheme,
      links: (window as any).currentLinks || []
    };

    iframe.contentWindow.postMessage({
      type: 'profile-updated',
      profile
    }, '*');
  }

  // Listen for local updates to sync with iframe
  document.addEventListener('theme-updated', (e: any) => {
    if (iframe?.contentWindow) {
      iframe.contentWindow.postMessage({
        type: 'theme-updated',
        theme: e.detail
      }, '*');
    }
  });

  document.addEventListener('links-updated', (e: any) => {
    (window as any).currentLinks = e.detail;
    updateIframe();
  });

  // Also listen for form inputs
  ['username', 'displayName', 'bio'].forEach(id => {
    document.getElementById(id)?.addEventListener('input', () => {
      // Debounce slightly?
      updateIframe();
    });
  });

  refreshBtn?.addEventListener('click', () => {
    if (iframe) {
      iframe.src = iframe.src;
      loader?.classList.add('active');
    }
  });

  iframe?.addEventListener('load', () => {
    loader?.classList.remove('active');
    updateIframe();
  });
</script>

<style>
  .profile-preview {
    background: white;
    border-radius: 20px;
    border: 1px solid #e5e7eb;
    overflow: hidden;
    position: sticky;
    top: 2rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
  }

  .preview-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid #e5e7eb;
    background: white;
  }

  .preview-header h3 {
    margin: 0;
    font-size: 0.9rem;
    font-weight: 700;
    color: #111827;
    flex: 1;
  }

  .refresh-btn {
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    color: #6b7280;
    border-radius: 8px;
    display: flex;
    transition: all 0.2s;
  }

  .refresh-btn:hover {
    background: #f3f4f6;
    color: #111;
  }

  .refresh-btn span {
    font-size: 1.25rem;
  }

  .preview-device {
    padding: 2rem 1rem;
    background: #f8fafc;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .preview-screen {
    width: 300px;
    height: 600px;
    background: #111827;
    border-radius: 44px;
    border: 10px solid #111827;
    overflow: hidden;
    position: relative;
    box-shadow: 
      0 25px 50px -12px rgba(0, 0, 0, 0.25),
      0 0 0 2px rgba(255, 255, 255, 0.1);
  }

  .preview-screen::after {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 120px;
    height: 25px;
    background: #111827;
    border-bottom-left-radius: 18px;
    border-bottom-right-radius: 18px;
    z-index: 20;
  }

  .preview-iframe {
    width: 100%;
    height: 100%;
    border: none;
    background: white;
    border-radius: 34px;
  }

  .preview-loading {
    position: absolute;
    inset: 0;
    background: rgba(255, 255, 255, 0.8);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 10;
  }

  .preview-loading.active {
    display: flex;
  }

  .spinner {
    width: 32px;
    height: 32px;
    border: 3px solid #e5e7eb;
    border-top-color: #2563eb;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  @media (max-width: 640px) {
    .preview-screen {
      width: 260px;
      height: 520px;
    }
  }
</style>
