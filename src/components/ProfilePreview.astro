  }

  .preview-link-arrow {
    font-size: 1rem;
    color: #9ca3af;
  }

  .preview-more {
    text-align: center;
    color: #6b7280;
    font-size: 0.8rem;
    margin: 0.25rem 0;
  }

  .preview-footer {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.375rem;
    margin-top: auto;
    padding-top: 1rem;
    color: #9ca3af;
